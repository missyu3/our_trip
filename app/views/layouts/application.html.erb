<!DOCTYPE html>
<html>
  <head>
    <title>OurTrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
    <% if user_signed_in? %>
      <%= link_to I18n.t("button.logout"), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to I18n.t("button.sign_in"), new_user_registration_path %>
      <%= link_to I18n.t("button.login"), new_user_session_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
