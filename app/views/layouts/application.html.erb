<!DOCTYPE html>
<html>
  <head>
    <title>OurTrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> 
  </head>
  <header>
    <nav class="nav">
      <%= link_to I18n.t("title.app"), root_path, class: "navbar-brand"%>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="" role="button" aria-expanded="false">
              <%= I18n.t("button.menu") %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              
              <% if user_signed_in? %>
                <li role="presentation"><%= link_to I18n.t("button.plan_index"), plans_path %></li>
                <li role="presentation" class="divider"></li>
                <li role="presentation"><%= link_to I18n.t("button.my_page"), user_path(current_user.id) %></li>
                <li role="presentation"><%= link_to I18n.t("button.logout"), destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li role="presentation"><%= link_to I18n.t("button.sign_in"), new_user_registration_path %></li>
                <li role="presentation"><%= link_to I18n.t("button.login"), new_user_session_path %></li>
              <% end %>
            </ul>
          </li>
        </ul>
        <% if user_signed_in? %>
          <div class="navbar-text navbar-right">
            <%= current_user.name %>
          </div>
        <% end %>
    </nav>
  </header>
  <body> 
    <% if notice %>
      <p class="alert alert-info center_form"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger center_form"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </body>
  <footer>
    <div id="copyright">©️missyu3 2020</div>
  </footer>
</html>
