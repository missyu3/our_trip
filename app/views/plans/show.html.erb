<h1>旅行計画</h1>
<%= I18n.t("activerecord.attributes.plan.name") %>
<%= @plan.name %>
<%= I18n.t("activerecord.attributes.plan.content") %>
<%= @plan.content %>
<%= I18n.t("activerecord.attributes.plan.updated_at") %>
<%= I18n.l(@plan.updated_at, format: :long) %>
<% if @plan.user == current_user %>
  <%= link_to I18n.t("button.edit") , edit_plan_path(@plan) , class: "button_base button_info" %>
  <%= link_to I18n.t("button.destroy")  , plan_path(@plan) , method: :delete , class: "button_base button_warning destroy_plan"%>
  <%= link_to "Item" , new_plan_plan_item_path(@plan.id) , class: "button_base button_info" %>
<% end %>
<% @plan.plan_items.each do |item| %>
  <%= link_to item.title, plan_plan_item_path(id: item.id , plan_id: @plan.id) %>
  <%= item.title %>
  <%= item.category %>
  <%= item.content %>
  <%= link_to I18n.t("button.edit") , edit_plan_plan_item_path(id: item.id , plan_id: @plan.id) , class: "edit_plan_item#{item.id} button_base button_info" %>
  <%= link_to I18n.t("button.destroy")  , plan_plan_item_path(id: item.id , plan_id: @plan.id) , method: :delete , class: "button_base button_warning destroy_plan_item#{item.id}"%>
<% end %>