<div class="button_wrapper">
  <%= link_to I18n.t("button.plan_new"), new_plan_path, class: "button_base button_info" %>
</div>
<div class="container">
  <div class="frame">
    <div class="row">
      <% @plan.each do |plan| %>
        <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 ">
          <div class="shadow card_margin card">
            <%= link_to plan_path(plan), class: "card_link" do %>
              <%= image_tag 'travel.jpg', class: "card-img" %>
              <div class="card-content">
                <h1 class="card-title"><%= plan.name %></h1>
                <p class="card-text"><%= plan.content %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
